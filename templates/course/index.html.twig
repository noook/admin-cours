{% extends 'base.html.twig' %}

{% block title %}Cours{% endblock %}
{% block stylesheets %}
{{ encore_entry_link_tags('list-view') }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Cours</h1>
    {% for class,courses in classes %}
        <section>
            <h2>{{ class }}</h2>
            <ul>
                {% for course in courses %}
                <li>
                    <a href="{{ path('course-exercises', { course: course.slug }) }}">{{ course.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </section>
    {% endfor %}
</div>
{% endblock %}
